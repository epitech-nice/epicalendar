{
  "name": "epicalendar-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.0",
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "clean": "rimraf node_modules .turbo client/.next server/dist"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "turbo": "^2.6.1",
    "typescript": "^5.8.3"
  }
}
