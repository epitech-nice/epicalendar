FROM node:22-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the application (transpile only, skip type checking)
RUN npx tsc --noCheck --skipLibCheck && npx tsc-alias

EXPOSE 5000

CMD ["npm", "run", "start"]
